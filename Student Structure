#include <stdio.h>
#include <stdlib.h>
struct student
{
    int rollno;
    char name[20];
    int sem;
    float m1;
    float m2;
    float m3;

};
int main()
{
    int i;
    struct student s[5];
    struct student *ptr=s;
    float total=0;
    for(i=0;i<5;)
    {
        printf("\n enter the student details:%d\n",i++);
        printf("\n enter the student rollno:");
        scanf("%d",&ptr->rollno);
        printf("\n enter the name:");
        scanf("%s",ptr->name);
        printf("\n enter the sem:");
        scanf("%d",&ptr->sem);
        printf("\n enter the marks of subject1:");
        scanf("%f",&ptr->m1);
        printf("\n enter the marks of subject2:");
        scanf("%f",&ptr->m2);
        printf("\n enter the marks of subject3:");
        scanf("%f",&ptr->m3);
        total=ptr->m1+ptr->m2+ptr->m3;
        printf("Total marks:%f\n",total);
        ptr++;


    }
    ptr=s;
    for(i=0;i<5;)
    {
        printf("\n student details:%d\n",i++);
        printf("\n Roll no:%d\n",ptr->rollno);
        printf("\n Name:%s\n",ptr->name);
        printf("\n Sem:%d\n",ptr->sem);
        printf("\n Marks1:%f\n",ptr->m1);
        printf("\n Marks2:%f\n",ptr->m2);
        printf("\n Marks3:%f\n",ptr->m3);
        ptr++;


    }
    ptr=s;
    float s1_total=0,s2_total=0,s3_total=0;
    printf("\n Subject wise marks:\n");
    for(i=0;i<5;i++)
    {
        s1_total+=ptr->m1;
        s2_total+=ptr->m2;
        s3_total+=ptr->m3;
        ptr++;
    }
    printf("\n Total marks for 1st subject:%f\n",s1_total);
    printf("\n Total marks for 2nd subject:%f\n",s2_total);
    printf("\n Total marks for 3rd subject:%f\n",s3_total);


}
